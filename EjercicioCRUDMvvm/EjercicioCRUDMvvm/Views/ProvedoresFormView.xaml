<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EjercicioCRUDMvvm.Views.ProvedoresFormView"
             Title="ProvedoresFormView">
    <ScrollView>
        <VerticalStackLayout Padding="30,0,30,0" Spacing="5" VerticalOptions="StartAndExpand" HorizontalOptions="FillAndExpand">
            <Label Text="Nombre:" />
            <Entry Text="{Binding Empresa}" Keyboard="Text" />

            <Label Text="Apellido:" />
            <Entry Text="{Binding Encargado}" Keyboard="Text" />

            <Label Text="Correo:" />
            <Entry Text="{Binding Correo}" Keyboard="Text" />

            <Label Text="Teléfono:" />
            <Entry Text="{Binding Telefono}" Keyboard="Numeric" />

            <Label Text="Dirección:" />
            <Entry Text="{Binding Direccion}" Keyboard="Text"/>

            <Button Text="Guardar" Command="{Binding AddUpdateCommand}" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>